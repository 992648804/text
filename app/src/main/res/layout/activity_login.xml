<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff60feef"
    android:orientation="vertical"
    tools:context="eiyou.us.text.LoginActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:background="#ff007fff"
        android:gravity="center"
        android:text="MOOC"
        android:textColor="#ff30ffbc"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="41dp"
        android:src="@drawable/abc_ratingbar_full_material" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="账号："
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.45"
            android:background="@drawable/abc_edit_text_material"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="密码："
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_user_psd"
            android:layout_width="wrap_content"
            android:background="@drawable/abc_edit_text_material"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.45"
            android:inputType="textPassword"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22dp" />
    </LinearLayout>

    <Button
        android:id="@+id/b_login"
        android:layout_width="365px"
        android:layout_height="111px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:background="@drawable/button"
        android:text="登录"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22dp"
        android:layout_marginTop="72dp">

        <TextView
            android:id="@+id/tv_new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户"
            android:layout_alignParentRight="true"
            android:textColor="#e1ff00a7"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_forget_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="#59000000"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>
