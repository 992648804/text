<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff60feef"
    android:orientation="vertical"
    tools:context="eiyou.us.text.LoginActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:background="#ff007fff"
        android:gravity="center"
        android:text="MOOC"
        android:textColor="#ff30ffbc"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="41dp"
        android:src="@drawable/abc_ratingbar_full_material" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text=" 账号 ："
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_user_name0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.45"
            android:background="@drawable/abc_edit_text_material"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text=" 密码 ："
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_user_psd0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.45"
            android:background="@drawable/abc_edit_text_material"
            android:inputType="textPassword"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="↑确认："
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_user_psd_again0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.26"
            android:inputType="textPassword"
            android:background="@drawable/abc_edit_text_material"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22dp" />
    </LinearLayout>

    <Button
        android:id="@+id/b_register"
        android:layout_width="365px"
        android:layout_height="111px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:background="@drawable/button"
        android:text="注册"
        android:textSize="22sp" />


</LinearLayout>
